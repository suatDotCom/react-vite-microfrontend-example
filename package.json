{
  "name": "react-vite-micro-frontend",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "dev": "vite --force",
    "build": "tsc && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "build:components": "cd remote-components && npm run build",
    "preview:components": "cd remote-components && npm run preview",
    "dev:components": "cd remote-components && npm run dev -- --force",
    "build:all": "npm run build:components && npm run build",
    "preview:all": "concurrently \"npm run preview:components\" \"npm run preview\"",
    "dev:all": "concurrently \"npm run build:components\" \"npm run dev:components\" \"npm run dev\"",
    "start:all": "npm run build:all && npm run preview:all",
    "install:all": "npm install && cd remote-components && npm install",
    "generate-types": "NODE_OPTIONS=\"--loader ts-node/esm\" ts-node scripts/generate-types.ts",
    "generate-types:watch": "nodemon --watch remote-components/src/components --ext tsx --exec npm run generate-types"
  },
  "dependencies": {
    "@types/styled-components": "5.1.34",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "styled-components": "6.1.14"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@originjs/vite-plugin-federation": "^1.3.9",
    "@types/express": "^5.0.0",
    "@types/node": "^22.12.0",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "axios": "^1.7.9",
    "concurrently": "^8.2.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "express": "^4.21.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "ts-morph": "^25.0.0",
    "ts-node": "^10.9.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5"
  }
}
